<h1 align="center" style="text-transform: capitalize"><%= @category.name %></h1>
<div align="center">
  <% if log_in? and current_user.admin? %>
    <div class="row">
      <span class="badge" style="margin-bottom:10px">
        <%= link_to "Edit this category", edit_category_path(@category)%>
      </span>      
    </div>
  <%end%>
  <% if !@category.articles.any?%>
    <p class="no_articles">There is no article for <%=@category.name%></p>
  <%end%>
  <%= will_paginate @category_articles%>
</div>
<%= render 'articles/article', obj: @category_articles%>
<div align="center">
  <%= will_paginate @category_articles%>  
</div>

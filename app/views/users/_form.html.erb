<%= render "shared/errors", obj: @user %>

<div class='row'>
  <div class="clo-xs=12">
    <%= form_for(@user, :html => {class: "form-horizontal",role: "form"}) do |user| %>
        <div class="form-group">
          <div class="control-label col-sm-2">
              <%=user.label :username%><br>
          </div>
          <div class="col-sm-8">
            <%=user.text_field :username, class: "form-control", placeholder: "Enter User Name", autofocus: true%>
          </div>
        </div>
        <div class="form-group">
          <div class="control-label col-sm-2">
            <%=user.label :email%><br>
            </div>
          <div class="col-sm-8">
            <%=user.email_field :email, class: "form-control", placeholder: "Enter Email ID"%>
          </div>
        </div>
        <div class="form-group">
          <div class="control-label col-sm-2">
            <%=user.label :password%><br>
            </div>
          <div class="col-sm-8">
            <%=user.password_field :password, class: "form-control", placeholder: "Enter Password"%>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <%= user.submit(@user.new_record? ? "Sign up" : "Update", class: "btn btn-primary") %>
          </div>
        </div>  
    <%end%>
  </div>
</div>

<div class="col-xs-4 col-xs-offset-4">
  [ <%= link_to 'Cancel request and return to users listing', articles_path%> ]
</div>
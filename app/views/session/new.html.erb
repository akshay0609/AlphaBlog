<h1 align="center">Login</h1>


<%= form_for(:session, :html => {class: "form-horizontal",role: "form"}, url: login_path) do |user| %>
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%=user.label :email%><br>
        </div>
      <div class="col-sm-8">
        <%=user.email_field :email, class: "form-control", placeholder: "Enter Email ID", autofocus: true%>
      </div>
    </div>
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%=user.label :password%><br>
        </div>
      <div class="col-sm-8">
        <%=user.password_field :password, class: "form-control", autocomplite: "off"%>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= user.submit 'Log in', class: "btn btn-primary btn-lg" %>
      </div>
    </div>  
<%end%>
<div class="col-xs-4 col-xs-offset-4">
  [ <%= link_to 'Cancel request and return to users listing', articles_path%> ]
</div>